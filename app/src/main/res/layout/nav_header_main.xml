<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:minHeight="100dp"
    android:orientation="vertical">

    <ScrollView style="@style/match_match">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llSettingAppSettingContainer"
                style="@style/ll_vertical_match_wrap"
                android:layout_marginTop="30dp">
                <LinearLayout
                    android:id="@+id/home"
                    style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="首页" />

                    <!--<ImageView style="@style/content_item_rt_img" />-->
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <!--<View-->
                <!--    style="@style/divider_horizontal_1px"-->
                <!--    android:layout_marginBottom="@dimen/item_distance" />-->

                <LinearLayout
                    android:id="@+id/setting"
                    style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="设置" />

                    <!--<ImageView style="@style/content_item_rt_img" />-->
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/fontSize"
                    style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="字体大小" />

                    <!--<ImageView style="@style/content_item_rt_img" />-->
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/cache"
                    style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="清除缓存" />

                    <!--<ImageView style="@style/content_item_rt_img" />-->
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/bottom_button"
                    style="@style/content_item_white">

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="底部导航栏" />

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:id="@+id/bottom_button_status"
                        android:layout_weight="1"
                        android:textSize="10pt"
                        android:gravity="left"
                        android:text="下" />

                    <!--<ImageView style="@style/content_item_rt_img" />-->
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />
                <!--<LinearLayout style="@style/content_item_white">-->

                <!--    <TextView-->
                <!--        style="@style/content_item_lf_tv"-->
                <!--        android:layout_weight="1"-->
                <!--        android:text="缓存" />-->

                <!--    <ImageView-->
                <!--        android:id="@+id/ivSettingCache"-->
                <!--        style="@style/content_item_rt_img"-->
                <!--        android:paddingRight="@dimen/item_padding_right"-->
                <!--        android:src="@drawable/on" />-->
                <!--</LinearLayout>-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
